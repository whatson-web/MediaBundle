{% spaceless %}
    {% if images is defined and images is not empty %}
        <picture>
            {% if images['responsive'] is defined %}
                {% for maxWidth, imagePath in images['responsive'] %}
                    <source media="(max-width: {{ maxWidth }}px)" srcset="{{ wh_media_baseurl ~ imagePath }}">
                {% endfor %}
            {% endif %}
            <img src="{{ wh_media_baseurl ~ images['default'] }}" class="img-responsive">
        </picture>
    {% endif %}
    {% if url is defined %}
        {{ wh_media_baseurl ~ url }}
    {% endif %}
{% endspaceless %}